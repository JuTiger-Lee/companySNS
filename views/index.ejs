<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .main_gaci_section_box {
            width: 1400px;
            margin: auto;
            margin-top: 50px;
        }

        .main_gaci_box {
            text-align: center;
            width: 100%;
        }

        .main_gaci_section_box textarea {
            width: 70%;
            margin: auto;
            resize: none;
            border-radius: 5px;
            border: 1px solid #cccccc;
            padding-left: 25px;
            padding-top: 25px;
            position: relative;
        }

        .main_gaci_box_btn {
            width: 70%;
            margin: auto;
            padding-left: 25px;
            text-align: left;
        }

        .main_gaci_box_btn button {
            float: right;
            width: 70px;
            height: 30px;
            background-color: #4169E1;
            color: white;
            border-radius: 5px;
            border: black;
        }

        .radious_nickname_box {
            width: 50px;
            height: 50px;
            border-radius: 50px;
            background-color: #4169E1;
            position: absolute;
            z-index: 9999;
            margin-left: -45px;
            margin-top: -25px;
        }

        .radious_nickname_box h3 {
            color: white;
            font-size: 35px;
            line-height: 50px;
        }

        .radious_big_box {
            width: 70%;
            margin: auto;
        }

        .main_gaci_box {
            margin-top: 100px;
            margin-bottom: 100px;
        }

        .main_gaci_box .list_boxs {
            width: 70%;
            padding: 30px 20px 5px;
            border: 1px solid #cccccc;
            border-radius: 5px;
            margin: auto;
            text-align: left;
        }

        .main_gaci_list_box_btn {
            width: 70%;
            margin: auto;
            padding-left: 25px;
            margin-top: 5px;
        }

        .main_gaci_list_box_btn button {
            float: right;
            width: 70px;
            height: 30px;
            background-color: #4169E1;
            color: white;
            border-radius: 5px;
            border: #4169E1;
        }

        .comments_box {
            margin-top: 10px;
        }

        .big_comments_box {
            width: 100%;
            padding-top: 40px;
            /* display: none; */
        }

        .contents_area_box {
            width: 100%;
            margin: auto;
            text-align: center;
            display: flex
        }

        .contents_big_text_area_box {
            margin-top: 80px;
        }

        .comment_radious_box {
            width: 50px;
            height: 50px;
            border-radius: 50px;
            background-color: #ADD8E6;
            position: absolute;
            z-index: 9999;
            color: white;
            font-size: 12px;
            line-height: 50px;
            margin-left: 175px;
            margin-top: 20px;
        }

        .big_comment_area_box {
            position:relative;
        }

        .big_comment_area_box textarea {
            margin-top: 40px;
        }
    </style>
</head>

<body>
    <header>
        <%- include ("header.ejs") %>
    </header>

    <div class="main_gaci_section_box">
        <div class="main_gaci_box">
            <form action="/" method="POST">
                <div class="radious_big_box">
                    <div class="radious_nickname_box">
                        <h3><%= username[0] %></h3>
                    </div>
                </div>
                <textarea name="Main_gaci_contents" id="" cols="30" rows="10" placeholder="글을 작성해주세요."
                    required></textarea>

                <div class="main_gaci_box_btn">
                    <button>글 등록</button>
                    <p>총 <%= rows.length %> 게시물</p>
                </div>
            </form>
            <div class="main_gaci_box">
                <% for(let post of rows) { %>
                <div>
                    <div class="contents_big_text_area_box">
                        <div class="radious_big_box">
                            <div class="radious_nickname_box">
                                <h3><%= post.Main_gaci_contents_user_name[0] %></h3>
                            </div>
                        </div>
                        <div class="contents_area_box"><textarea name="" id="" cols="30" rows="10" class="list_boxs"
                                readonly><%= post.Main_gaci_contents %></textarea></div>
                    </div>
                    <div class="comments_box">
                        <form action="/<%= post.id %>/comment" method="POST">
                            <div class="main_gaci_list_box_btn">
                                <button>댓글 등록</button>
                            </div>
                            <div class="big_comments_box">
                                <textarea name="content" cols="30" rows="5" placeholder="댓글을 입력해주세요."
                                    required></textarea>
                                <% for (let comment of comment_main_gacis) { %>
                                    <% if(post.id === comment.MainGaciId) { %> <!-- post.id랑 게시글에 mainGaciId랑 일치하는 게시글만 출력 mainGaciId랑=>게시글의 post번호-->
                                        <div class="big_comment_area_box">
                                            <div class="comment_radious_box">
                                            <h1><%= comment.contents_user_name[0] %></h1>
                                        </div>
                                        <textarea cols="30" rows="5" class="comments_real_box"
                                            readonly><%= comment.content %></textarea>
                                    <% } %>
                                <% }%>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</body>

<script>
    const big_comments_box = document.querySelectorAll(".big_comments_box");
    const main_gaci_list_box_btn = document.querySelectorAll(".main_gaci_list_box_btn button");

    for (let i = 0; i < main_gaci_list_box_btn.length; i++) {
        main_gaci_list_box_btn[i].addEventListener('click', (e) => {
            big_comments_box[i].style.display = "block";
        });
    }
</script>
</html>